<h1 class="title "> Add Product Overview</h1>

<main class="realtimeAddproducts">
  
    <div 

        id="card-container" class="card-container">
        
    </div>

  <div class="form-Container">

    <h2 class="titleRealTime" >New Product Details</h2>

    <div id="form-container" class="form-Container">
    <form id="addProductForm" class="form-Product">

        <div class="form-info">
            <label for="title">Product Name:</label>
            <input type="text" id="title" name="title" required>
        </div>

        <div class="form-info">
            <label for="description">Description:</label>
            <input type="text" id="description" name="description" required>
        </div>

        <div class="form-info">
            <label for="category">Category:</label>
            <input type="text" id="category" name="category" required>
        </div>

        <div class="form-info">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" step="0.01" required>
        </div>

        <div class="form-info">
            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" required>
        </div>

        <button id="btn" type="submit" class="addbtn">Add product on sale</button>
    </form>
</div>

</main>

