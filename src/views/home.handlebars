<main>
  <h1 class="title"> Product Showcase</h1>

  <div class="list-container">
    {{#if products.length}}
        {{#each products}}
          <div class="list">        
            <div><p>Product</p><p class="list-product">{{this.title}}</p></div>
            <div><p>Description</p><p class="list-product">{{this.description}}</p></div>
            <div><p>Price</p><p class="list-product">USD {{this.price}}</p></div>
            <div><p>Stock</p><p class="list-product">{{this.stock}}</p></div>
          </div>
        {{/each}}
      {{else}}
      <h2 class="titleRealTime">No Products To show, Add one!</h2>
    {{/if}}
  </div>
</main>